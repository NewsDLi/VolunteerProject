<?xml version="1.0" encoding="UTF-8"?>
<configuration>      
    <!-- %m输出的信息,%p日志级别,%t线程名,%d日期,%c类的全名,%i索引【从数字0开始递增】,,, -->      
    <!-- appender是configuration的子节点，是负责写日志的组件。 -->  
    <!-- ConsoleAppender：把日志输出到控制台 -->  
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">      
        <encoder charset="UTF-8" class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>[%d{yyyy-MM-dd HH:mm:ss:SSS z}]  %-5p %t %logger{1000}.%method\(%file:%line\) : %m%n</pattern>
		</encoder>      
    </appender>     
    <appender name="syslog" class="ch.qos.logback.core.rolling.RollingFileAppender">      
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">      
            <fileNamePattern>log/%d.%i{yyyyMMdd}Daily.log</fileNamePattern>
            <!-- 每产生一个日志文件，该日志文件的保存期限为30天 -->   
            <maxHistory>30</maxHistory>     
            <timeBasedFileNamingAndTriggeringPolicy  class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">      
                <maxFileSize>1KB</maxFileSize>      
            </timeBasedFileNamingAndTriggeringPolicy>      
        </rollingPolicy>      
             <!-- 注意 logback 的括号需要转义 MMdd -->
		<encoder charset="UTF-8" class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>[%d{yyyy-MM-dd HH:mm:ss:SSS z}]  %-5p %t %logger{1000}.%method\(%file:%line\) : %m%n</pattern>
		</encoder>     
    </appender>      
    <!-- 控制台输出日志级别 -->  
    <root level="info">      
        <appender-ref ref="STDOUT" />      
    </root>      
    <logger name="com.volunteer.web.controller.UserController" level="DEBUG">      
        <appender-ref ref="syslog" />      
    </logger>      
</configuration>    